{
  "name": "alter-ego-pwa",
  "version": "1.0.0",
  "description": "A PWA variant of L4w1i3t's ALTER EGO program.",
  "main": "dist/index.js",
  "scripts": {
    "start-dev": "webpack serve --mode development",
    "start-prod": "webpack serve --mode production",
    "build-dev": "webpack --mode development",
    "build-prod": "webpack --mode production",
    "build": "webpack --mode production",
    "build:analyze": "cross-env ANALYZE_BUNDLE=true webpack --mode production",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'ESLint temporarily disabled - TypeScript provides type checking'",
    "lint:fix": "echo 'ESLint temporarily disabled - use Prettier for formatting'",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "if exist dist rmdir /s /q dist && if exist .webpack_cache rmdir /s /q .webpack_cache",
    "test": "echo 'Tests not configured yet'",
    "start": "npm run start-dev",
    "deps:check": "npx depcheck",
    "deps:update": "npm update",
    "ci": "npm run typecheck && npm run build-prod",
    "ci:full": "npm run typecheck && npm run format:check && npm run build-prod"
  },
  "author": "L4w1i3t",
  "license": "MIT",
  "dependencies": {
    "dexie": "^4.0.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "styled-components": "^6.1.16",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.7",
    "body-parser": "^1.20.1",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "depcheck": "^1.4.7",
    "dotenv": "^16.5.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.5.3",
    "prettier": "^3.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  }
}
