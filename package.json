{
  "name": "alter-ego-pwa",
  "version": "1.0.0",
  "description": "A PWA variant of L4w1i3t's ALTER EGO program.",
  "main": "dist/index.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
